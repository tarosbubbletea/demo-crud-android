<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroFragment2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/imagen_2"
        android:scaleType="fitStart"
        android:fitsSystemWindows="true">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="26dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineL"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_begin="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="22dp" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:background="@drawable/arrow"
            app:layout_constraintStart_toEndOf="@id/guidelineL"
            app:layout_constraintTop_toTopOf="@id/guidelineT" />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toEndOf="@id/guidelineL"
            app:layout_constraintTop_toBottomOf="@id/guidelineT"
            app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/LayoutLayout"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewCarrera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/orbi"
                    android:text="Carrera"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp" />

                <Spinner
                    android:id="@+id/spinnerCarrera"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/spinner"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingStart="7dp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/orbi"
                    android:text="AÃ±o"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

                <EditText
                    android:id="@+id/editTextYear"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/texto"
                    android:ems="10"
                    android:textColorHint="#a2a2a2"
                    android:hint="Ingrese dato..."
                    android:inputType="text"
                    android:paddingStart="14dp"
                    android:textColor="@color/white"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textViewSemestre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/orbi"
                    android:text="Semestre"
                    android:textColor="@color/white"
                    android:textSize="28sp" />

                <EditText
                    android:id="@+id/editTextSemester"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/texto"
                    android:ems="10"
                    android:hint="Ingrese dato..."
                    android:inputType="text"
                    android:paddingStart="14dp"
                    android:textColor="@color/white"
                    android:textColorHint="#a2a2a2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewSede"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/orbi"
                    android:text="Sede"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp" />

                <Spinner
                    android:id="@+id/spinnerSede"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/spinner"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingStart="7dp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/orbi"
                    android:text="Tipo de Usuario"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp" />

                <Spinner
                    android:id="@+id/spinnerUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/spinner"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingStart="7dp"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/rectangulo"
                android:padding="4sp"
                android:paddingStart="15sp"
                android:paddingEnd="15sp"
                android:text="Finalizar"
                android:textColor="#FFFFFF"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                app:layout_constraintEnd_toEndOf="@id/guidelineR"
                app:layout_constraintStart_toEndOf="@id/guidelineL"
                app:layout_constraintTop_toBottomOf="@id/LayoutLayout" />

        </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>